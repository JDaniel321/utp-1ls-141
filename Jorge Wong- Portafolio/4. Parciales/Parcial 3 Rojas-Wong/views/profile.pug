extends newBase

block links
    link(type='text/css', rel='stylesheet', href='./css/profile.css')

block contenido
    .container
        .row
            .col
                
                 span.glyphicon.glyphicon-user.icono
                 h3 Bienvenido, #{usuario} !
                 
        .row
            .col
                h2.text-center Lista de los Usuarios registrados 
        .row
            .col
                 table.table.table-bordered.table-hover.table-responsive
                    thead.thead-dark
                        tr
                            th #
                            th Nombre 
                            th Apellido 
                            th Edad 
                            th Correo
                            th Direccion
        
                        tr 
                            -var number = 0;
                            each lista in modelo
                                form(action='/actualizar', method='POST')
                                    td #{number+1}  
                                    td #{lista.nombre}
                                        input#nombre(type='text' name='nombre')
                                    td #{lista.apellido}
                                        input#apellido(type='text' name='apellido')
                                    td #{lista.edad}
                                        input#edad(type='number' name='edad')
                                    td #{lista.correo}
                                        input#correo(type='email' name='correo')
                                    td #{lista.direccion}
                                        textarea#direccion(name="direccion", cols="30", rows="10")
                                    td 
                                        input(type='submit',value='Actualizar').btn.btn-success
                                form(action='/eliminar', method='POST')
                                    input(type='hidden', value=lista.correo, name='correo')
                                    td
                                        input(type='submit',value='Borrar').btn.btn-danger
                        tr 
                            form(method='POST', action='/insertar')
                                td Nuevo
                                td
                                    input#nombre(type='text' name='nombre')
                                td
                                    input#apellido(type='text' name='apellido') 
                                td
                                    input#edad(type='number' name='edad')
                                td
                                    input#correo(type='email' name='correo')
                                td
                                  input#direccion(type='textarea' name='direccion')
                                td

                                    input.btn.btn-primary#botoncin(type='submit' value='Insertar') 
        
        a.nav-link(href=('./productos')) Ir a productos
                                    